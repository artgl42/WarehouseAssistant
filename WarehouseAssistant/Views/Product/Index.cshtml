@using WarehouseAssistant.Models
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Товары";
}

<table class="table">
    <tr>
        <td>Id</td>
        <td>Название</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <i class="bi bi-backspace-fill"></i>
                <a asp-action="Delete" asp-controller="product" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }
</table>

<form asp-controller="product" asp-action="Index" method="post">
    <p>Название нового товара: <input name="nameProduct" /></p>
    <input type="submit" class="btn btn-primary mb-1" value="Добавить товар" />
</form>
